@inherits BaseModalComponent
<div class="card-body">
  <p>@Message</p>
</div>
<div class="row justify-content-center">
    <div class="d-flex">
        <div class="ml-auto p-2">
            <button class="btn btn-primary" @onclick="@ConfirmClicked">@YesText</button>
            <button class="btn btn-danger" @onclick="@CancelClicked">@NoText</button>
        </div>
    </div>
</div>
@code {

    public async override Task SetParametersAsync(ParameterView parameters)
    {
        Message = parameters.GetValueOrDefault<string>("Message") ?? "Mesaj Yok"; //parametreyi dışardan aldık
        YesText = parameters.GetValueOrDefault<string>("YesText") ?? "Evet";
        NoText = parameters.GetValueOrDefault<string>("NoText") ?? "Hayır";
        await base.SetParametersAsync(parameters);
    }



}
